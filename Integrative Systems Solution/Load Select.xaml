<Page x:Class="Integrative_Systems_Solution.Load_Select"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Integrative_Systems_Solution"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Load_Select">

    <Grid>
        <Button Content="Confirm" HorizontalAlignment="Right" Margin="0,382,0,0" VerticalAlignment="Bottom" Height="68" Width="147" FontFamily="Arial" FontSize="24" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Height="85" TextWrapping="Wrap" Text="Please enter which containers you would like to load." VerticalAlignment="Top" Width="898" FontFamily="Arial" FontSize="36" Margin="10,10,0,0"/>
        <TextBox x:Name="ContainerInput" HorizontalAlignment="Left" Margin="10,80,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="606" Height="36" FontSize="24" FontFamily="Arial" KeyDown ="ContainerInput_TextChanged"/>
        <ScrollViewer Margin="10,120,184,0">
            <TextBlock x:Name="ContainersList" Margin="0,0,0,0" TextWrapping="Wrap" Text="" FontFamily="Arial" FontSize="24" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        </ScrollViewer>


    </Grid>
</Page>
